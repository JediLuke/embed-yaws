{erl_opts, [debug_info]}.
{deps, [
	{yaws, ".*", {git, "git://github.com/klacke/yaws", {branch, "master"}}}
	]}.

{relx, [{release, { embed_yaws, "0.1.0" }, [
	embed_yaws,
	sasl
	]},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}]
}.

{profiles, [
	{prod, [
		{relx, [
			{dev_mode, false},
            {include_erts, true}
    	]}
	]}
]}.
